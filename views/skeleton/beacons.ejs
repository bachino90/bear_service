<!DOCTYPE html>
<html>
  <% include _header %>
  <body>
    <div id='wrapper'>
      <% include _navbar %>
      <div id='page-wrapper'>
        <div class="col-lg-12">
          <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i><a href='/clients/<%= store.client %>/stores'> Client name</a></li>
            <li class="active"><i class="fa fa-dashboard"></i> Beacons</li>
          </ol>
        </div>
        <div class='container-fluid'>
          <!-- Page Heading -->
          <% if (is_new && is_new==4) { %>
            <% include _error %>
          <% } %>
          <div class="row">
            <div class='col-lg-12'>
              <div class='header-panel'>
                <div class='header-img'>
                  <img data-aload="http://images.media-allrecipes.com/userphotos/140x140/00/94/91/949139.jpg" alt="" class="img-circle logo">
                </div>
                <div class="header-data">
                  <h2><%= store.store_name %> <small><%= store.beacons.length %> beacons</small></h2>
                  <p><%= store.uuid %></p>
                  <p><%= store.major_id %></p>
                  <button id='addBeaconButton'>Add Beacon</button>
                  <button id='editStoreButton'>Edit Store</button>
                  <button id='editLayoutButton'>Edit layout</button>
                  <a href='/clients/<%= store.client %>/stores/<%= store._id %>/analytics' id=''>Analytics</a>
                </div>
              </div>
            </div>
          </div>
          <!-- /.row -->
          <% include _add_beacon %>
          <% include _edit_store %>
          <% include _edit_layout %>
          <% include _beacons %>
        </div>
      </div>
    </div>
    <% include _bottom_js %>
    <script src="/javascripts/beacon.js"></script>
    <script src="/javascripts/store_layout.js"></script>
    <% if (is_new && is_new == 1) { %>
      <script>
        $('#addBeaconModal').modal();
      </script>
    <% } %>
    <% if (is_new && is_new == 2) { %>
      <script>
        $('#editStoreModal').modal();
      </script>
    <% } %>
    <% if (is_new && is_new == 3) { %>
      <script>
        $('#editLayoutModal').modal();
      </script>
    <% } %>
  </body>
  </body>
</html>
