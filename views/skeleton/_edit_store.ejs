<div class="modal fade" id="editStoreModal">
<div class="modal-dialog">
<div class="modal-content">

<!-- MODAL HEADER -->
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title">Edit Store</h4>
</div>

<form id="editStoreForm" action="/clients/<%= store.client %>/stores/<%= store._id %>" method="POST">
  <!-- MODAL BODY -->
  <div class="modal-body">
    <!-- show any messages that come back with authentication -->
    <% if (edit_store_error.length > 0) { %>
      <div class="alert alert-danger"><%= edit_store_error.message %></div>
    <% } %>
    <div class="row">
      <div class="col-lg-12">
        <input name="_method" value="PUT" type="hidden">
        <label>Name</label>
        <input type="text" value='<%= store.store_name %>' placeholder="Name" name="store_name" required>
        </br>
        <label>Major ID</label>
        <input type="text" value='<%= store.major_id %>' placeholder="1" name="major_id" required>
        </br>
        <label>Locations</label>
        <input type="text" value='<%= store.location.latitude %>' placeholder="latitude" name="latitude">
        <input type="text" value='<%= store.location.longitude %>' placeholder="longitude" name="longitude">
        </br>
        <button href="/clients/<%= store.client %>/stores/<%= store._id %>/layout">Layout</button>
        </br>
      </div>
    </div>
  </div>
  <!-- MODAL FOOTER -->
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" value="Update" id='editStoreButton'/>
  </div>
  <!-- -->
</form>

</div>
</div>
</div>
