<!DOCTYPE html>
<html>
  <% include _header %>
  <body>
    <div id='wrapper'>
      <% include _navbar %>
      <div id='page-wrapper'>
        <div class='container-fluid'>
          <!-- Page Heading -->
          <% if (is_new && is_new==4) { %>
            <% include _error %>
          <% } %>
          <div class="row">
            <div class='col-lg-12'>
              <div class='header-panel'>
                <div class='header-img'>
                  <img src="http://images.media-allrecipes.com/userphotos/140x140/00/94/91/949139.jpg" alt="" class="img-circle logo">
                </div>
                <div class="header-data">
                  <h2><%= store.store_name %> <small><%= store.areas.length %> areas</small></h2>
                  <p><%= store.uuid %></p>
                  <p><%= store.major_id %></p>
                  <button id='addAreaButton'>Add Area</button>
                  <button id='editStoreButton'>Edit Store</button>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <ol class="breadcrumb">
                <li><i class="fa fa-dashboard"></i><a href='/clients/<%= store.client %>/stores'> Stores</a></li>
                <li class="active"><i class="fa fa-dashboard"></i> Areas</li>
              </ol>
            </div>
          </div>
          <!-- /.row -->
          <% include _add_area %>
          <% include _edit_store %>
          <% include _areas %>
        </div>
      </div>
    </div>
    <% include _bottom_js %>
    <script src="/javascripts/area.js"></script>
    <% if (is_new && is_new == 1) { %>
      <script>
        $('#addAreaModal').modal();
      </script>
    <% } %>
    <% if (is_new && is_new == 2) { %>
      <script>
        $('#editStoreModal').modal();
      </script>
    <% } %>
  </body>
</html>
