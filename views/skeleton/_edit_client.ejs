<div class="modal fade" id="editClientModal">
<div class="modal-dialog">
<div class="modal-content">

<!-- MODAL HEADER -->
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title">Edit Client</h4>
</div>

<form id="editClientForm" action="/clients/<%= client._id %>" method="POST">
  <!-- MODAL BODY -->
  <div class="modal-body">
    <div class="row">
      <div class="col-lg-12">
        <input name="_method" value="PUT" type="hidden">
        <label>Name</label>
        <input type="text" value='<%= client.name %>' placeholder="Name" name="name" required>
        <label>Primary UUID</label>
        <input type="text" value='<%= client.uuid %>' placeholder="12312312312-1231-2312-3123-123123123123" name="uuid" pattern="^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" required>
      </div>
    </div>
  </div>
  <!-- MODAL FOOTER -->
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" value="Update" id='editClientButton'/>
  </div>
  <!-- -->
</form>

</div>
</div>
</div>
