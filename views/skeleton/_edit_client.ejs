<div class="modal fade" id="editClientModal">
<div class="modal-dialog">
<div class="modal-content">

<!-- MODAL HEADER -->
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title">Edit Client</h4>
</div>

<form id="editClientForm" class="form-horizontal" action="/clients/<%= client._id %>" method="POST">
  <!-- MODAL BODY -->
  <div class="modal-body">
    <!-- show any messages that come back with authentication -->
    <% if (is_new && is_new==2) { %>
      <% include _error %>
    <% } %>
    <div class='form-group'>
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" value="<%= client.name %>" placeholder="Name" name="name" required>
      </div>
    </div>
    <div class='form-group'>
      <label class="col-sm-2 control-label">UUID</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" value="<%= client.uuid %>" placeholder="1" name="uuid" required>
      </div>
    </div>
  </div>
  <!-- MODAL FOOTER -->
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" value="Update" id='editClientButton'/>
  </div>
  <!-- -->
</form>

</div>
</div>
</div>
