<div class="modal fade" id="addStoreModal">
<div class="modal-dialog">
<div class="modal-content">

<!-- MODAL HEADER -->
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title">Add Store</h4>
</div>

<form id="addStoreForm" action="/clients/<%= client._id%>/stores" method="POST">
  <!-- MODAL BODY -->
  <div class="modal-body">
    <!-- show any messages that come back with authentication -->
    <% if (is_new && is_new==1) { %>
      <% include _error %>
    <% } %>
    <div class="row">
      <div class="col-md-12" style="margin-bottom:20px">
        <label>Name</label>
        <% if (new_store.length>0) { %>
        <input type="text" value="<%= new_store[0].store_name %>" placeholder="Name" name="store_name" required>
        <label>Major ID</label>
        <input type="text" value="<%= new_store[0].major_id %>" placeholder="1" name="major_id" required>
        <% } else { %>
        <input type="text" placeholder="Name" name="store_name" required>
        <label>Major ID</label>
        <input type="text" placeholder="1" name="major_id" required>
        <% } %>
      </div>
    </div>
  </div>
  <!-- MODAL FOOTER -->
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" value="Add" id='addStoreButton'/>
  </div>
  <!-- -->
</form>

</div>
</div>
</div>

<% if (is_new && is_new == 1) { %>
  <script>
    $('#addStoreModal').modal();
  </script>
<% } %>
