<!DOCTYPE html>
<html>
  <% include _header %>
  <body>
    <div id='wrapper'>
      <% include _navbar %>
      <div id='page-wrapper'>
        <div class='container-fluid'>
          <!-- Page Heading -->
          <div class="row">
            <div class="col-md-6">
              <div class='panel-heading'>
                <img src="http://images.media-allrecipes.com/userphotos/140x140/00/94/91/949139.jpg" alt="" class="img-circle logo">
                <div class="">
                  <h2><%= client.name %><small> <%= client.stores.length %> stores</small></h2>
                  <p><%= client.uuid %></p>

                  <button id='addStoreButton'>Add Store</button>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <ol class="breadcrumb">
                <li class="active"><i class="fa fa-dashboard"></i> Stores</li>
              </ol>
            </div>
          </div>
          <!-- /.row -->
          <% include _add_store %>
          <% include _stores %>
        </div>
      </div>
    </div>
    <% include _bottom_js %>
    <script src="/javascripts/store.js"></script>
  </body>
</html>
