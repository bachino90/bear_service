<div class="modal fade" id="editLayoutModal">
<div class="modal-dialog">
<div class="modal-content">

<!-- MODAL HEADER -->
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title">Edit Layout</h4>
</div>

  <!-- MODAL BODY -->
  <div class="modal-body">
    <!-- show any messages that come back with authentication -->
    <% if (is_new && is_new==3) { %>
      <% include _error %>
    <% } %>
    <div class='form-group' id="corners">
      <label>Corners</label>
      <div class="col-lg-12">
        <div class="col-sm-5" style="margin-bottom:15px;">
          <div class="input-group">
            <div class="input-group-addon">X</div>
            <input type="text" class="form-control" id="x" value="" placeholder="1" name="x" required>
          </div>
        </div>
        <div class="col-sm-5" style="margin-bottom:15px;">
          <div class="input-group">
            <div class="input-group-addon">Y</div>
            <input type="text" class="form-control" id="y" value="" placeholder="1" name="y" required>
          </div>
        </div>
        <div class="col-sm-2" style="margin-bottom:15px;">
          <input type='button' class="btn btn-danger" value='Delete' id='deleteCornerButton'>
        </div>
      </div>
    </div>
    <div class='form-group text-center'>
      <input type="button" class="btn btn-primary" value="Add Corner" id='addCornerButton' style="width:100%">
    </div>
    <div class='form-group text-center'>
      <input type="button" class="btn btn-default" value="Generate view" id='generateView' style="width:100%">
    </div>
    <div class='form-group text-center'>
      <canvas id="canvas_layout" height="350px" width="100%" style="border:1px solid #cccccc;width:100%;height:350px;">
      </canvas>
    </div>

  </div>
  <!-- MODAL FOOTER -->
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary" id='editLayoutSubmit'/>Update Layout</button>
  </div>
  <!-- -->

</div>
</div>
</div>
